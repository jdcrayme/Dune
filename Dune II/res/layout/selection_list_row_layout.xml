<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp" >
    
     <ImageView
         android:id="@+id/selection_list_icon"
         android:layout_width="60dp"
         android:layout_height="37dp"
         android:layout_gravity="center_vertical"
         android:layout_marginBottom="5dp"
         android:layout_marginRight="15dp"
         android:layout_marginTop="5dp"
         android:contentDescription="@string/selection_graphic"
         android:gravity="center_vertical"
         android:maxHeight="25dip"
         android:maxWidth="25dip"
         android:src="@drawable/barracks" />

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical" >

         <TextView
             android:id="@+id/selection_list_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="5dp"
             android:layout_marginTop="5dp"
             android:gravity="center_vertical"
             android:text="@string/generic"
             android:textSize="22dp"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/selection_list_cost"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="right"
             android:layout_marginLeft="150dp"
             android:text="@string/generic"
             android:textAppearance="?android:attr/textAppearanceSmall" />

     </LinearLayout>
        
</LinearLayout>